{
  "name": "tenanthq",
  "version": "1.0.0",
  "description": "A modern multi-tenant application management system built with Node.js, TypeScript, Express, and MongoDB",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:dev": "tsc && tsc-alias",
    "start": "node dist/app.js",
    "dev": "npm run build:dev && node dist/app.js",
    "dev:watch": "nodemon --watch src --ext ts --exec \"npm run build:dev && node dist/app.js\"",
    "dev:incremental": "tsc --incremental && tsc-alias && node dist/app.js",
    "dev:watch:incremental": "nodemon --watch src --ext ts --exec \"npm run dev:incremental\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepare": "husky"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "mongodb",
    "multi-tenant",
    "api",
    "backend"
  ],
  "author": "Mohan Suri <mohansuri92@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "mongodb-memory-server": "^10.1.4",
    "mongosh": "^2.5.3",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  }
}
